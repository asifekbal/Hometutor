<html>

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.css" />
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="/javascripts/index.js"></script>
</head>

<body>
  <form action="/users/register" method="post">
    <div class="col-md-6 col-md-offset-3">
      <div class="form">
        <h1> Complete Registration </h1>
        <div class="row">
          <div class="control-label col-sm-12">
            {{#if success_msg}}
              <div class="alert alert-success"> {{success_msg}} </div>
            {{/if}}
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-4" for="mobileno" maxlength="10">Mobile No</label>
          <div class="col-sm-8">
            <input type="text" placeholder="Mobile No" class="textarea" name="mobileno">
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-4" for="qualification">Qualification:</label>
          <div class="col-sm-8">
            <input type="text" placeholder="Qualication" class="textarea" name="qualification">
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-4" for="Dob">Date Of Birth</label>
          <div class="col-sm-8">
            <input type="text" value="DD-MM-YYYY" id="datepicker" placeholder="Date of Birth" class="textarea" name="dateofbirth">
            <script>
              $('#datepicker').datepicker({
                format: 'mm-dd-yyyy'
              });
            </script>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-4" for="pwd">Sex:</label>
          <div class="col-sm-8">
            <input type="text" id="sex" placeholder="Sex" class="textarea" name="sex">
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 control-label" for="textinput"> Adrress Line 1</label>
          <div class="col-sm-8">
            <input type="text" placeholder="Address Line 1" class="textarea" name="address1">
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 control-label" for="textinput">Address Line 2</label>
          <div class="col-sm-8">
            <input type="text" placeholder="Address Line 2" class="textarea" name="address2">
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 control-label" for="textinput">City</label>
          <div class="col-sm-8">
            <input type="text" placeholder="City" class="textarea" name="city">
          </div>
        </div>
        <div class="row">
          <label class="col-sm-2 control-label" for="textinput">State</label>
          <div class="col-sm-4">
            <input type="text" placeholder="State" class="textarea" name="state">
          </div>
          <label class="col-sm-2 control-label" for="textinput">Postal</label>
          <div class="col-sm-4">
            <input type="text" placeholder="Post Code" class="textarea" name="postal">
          </div>
        </div>
        <div class="row">
          <label class="col-sm-4 control-label" for="textinput">Country</label>
          <div class="col-sm-8">
            <input type="text" placeholder="Country" class="textarea" name="country">
          </div>
        </div>
        <div class="row">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="pull-right">
              <button type="submit" class="btn btn-default">Cancel</button>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</body>

</html>
